
<h3>Add Task</h3>
<%= form_tag '/tasks', method: :post do %>
  <div>
  <p>Task:</p>
    <input type="text" name="task_name">
  </div>
  <div>
    <p>Length time:</p>
    <input type="text" name="length_time">
  </div>
  <div>
    <p>Category:</p>
    <input type="text" name="category">
  </div>
  <div>
    <p>Notes:</p>
    <textarea name="notes" cols="25" rows="5"></textarea>
  </div>
  
  <input type="submit" value="submit">
<% end %>